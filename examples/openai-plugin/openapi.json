{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Help Wanted Issues",
    "description": "A simple API to fetch issues from the Wing GitHub repository where help is wanted."
  },
  "paths": {
    "/issues": {
      "get": {
        "operationId": "getIssues",
        "summary": "Get a list of issues labelled with 'üôã‚Äç‚ôÄÔ∏è help wanted'",
        "description": "Returns a list of issues from the GitHub repository 'winglang/wing' labelled with 'üôã‚Äç‚ôÄÔ∏è help wanted'",
        "responses": {
          "200": {
            "description": "A JSON array of issue objects",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer",
                        "description": "The issue ID."
                      },
                      "title": {
                        "type": "string",
                        "description": "The issue title."
                      },
                      "state": {
                        "type": "string",
                        "description": "The state of the issue (open or closed)."
                      },
                      "url": {
                        "type": "string",
                        "description": "The URL to the issue."
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The date and time when the issue was created."
                      },
                      "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The date and time when the issue was last updated."
                      },
                      "user": {
                        "type": "object",
                        "properties": {
                          "login": {
                            "type": "string",
                            "description": "The GitHub username of the user who created the issue."
                          }
                        }
                      },
                      "labels": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "integer",
                              "description": "The label ID."
                            },
                            "name": {
                              "type": "string",
                              "description": "The name of the label."
                            },
                            "color": {
                              "type": "string",
                              "description": "The color associated with the label."
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
